# Creativos Espacios - Environment Variables Template
# Copy this file to .env.local for development or .env.production for production

# ===================================
# ANALYTICS & TRACKING
# ===================================

# Google Tag Manager Container ID
REACT_APP_GTM_ID=GTM-M2Z9THQF

# Google Ads Conversion Tracking
REACT_APP_GA_CONVERSION=AW-11471696489

# MailChimp User ID (already integrated in public/index.html)
# REACT_APP_MAILCHIMP_ID=47304de05985a3e09520dc95e

# ===================================
# EMAIL CONFIGURATION (EmailJS)
# ===================================

# EmailJS Service ID
# Get from: https://dashboard.emailjs.com/admin
REACT_APP_EMAILJS_SERVICE_ID=your_service_id_here

# EmailJS Template ID
# Get from: https://dashboard.emailjs.com/admin/templates
REACT_APP_EMAILJS_TEMPLATE_ID=your_template_id_here

# EmailJS Public Key
# Get from: https://dashboard.emailjs.com/admin/account
REACT_APP_EMAILJS_PUBLIC_KEY=your_public_key_here

# Email destination for all form submissions
REACT_APP_EMAIL_DESTINATION=ventas@creativosespacios.mx

# ===================================
# APPLICATION CONFIGURATION
# ===================================

# Production URL (for SEO canonical URLs)
REACT_APP_SITE_URL=https://www.creativosespacios.mx

# API Base URL (if applicable)
# REACT_APP_API_URL=https://api.creativosespacios.mx

# Environment (development, staging, production)
REACT_APP_ENV=production

# ===================================
# FEATURE FLAGS (Optional)
# ===================================

# Enable/disable PWA features
REACT_APP_ENABLE_PWA=true

# Enable/disable analytics in development
REACT_APP_ENABLE_ANALYTICS_DEV=false

# Enable/disable cookie consent banner
REACT_APP_ENABLE_COOKIE_CONSENT=true

# ===================================
# NOTES
# ===================================
#
# - DO NOT commit .env.local or .env.production to version control
# - Add these files to .gitignore
# - For production deployment, set these variables in your hosting platform
#   (Vercel, Netlify, etc.) or create .env.production file
# - All variables must start with REACT_APP_ to be accessible in React
# - Changes to .env files require restarting the development server
#
